<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Horizontal line -->
        <item
            android:top="50dp"
            android:bottom="50dp"
            android:left="0dp"
            android:right="0dp">
            <shape android:shape="rectangle">
                <size android:height="2dp" />
                <solid android:color="#BF55EC" /> <!-- Color of the horizontal line (red in this case) -->
            </shape>
        </item>

        <!-- Vertical line -->
        <item
            android:left="50dp"
            android:right="50dp"
            android:top="0dp"
            android:bottom="0dp">
            <shape android:shape="rectangle">
                <size android:width="2dp" />
                <solid android:color="#BF55EC" /> <!-- Color of the vertical line (red in this case) -->
            </shape>
        </item>
    </layer-list>
</selector>